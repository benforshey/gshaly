{
  "name": "gshaly",
  "version": "1.0.0",
  "description": "official website of the GS Haly Co",
  "main": "index.html",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "6.5.3",
    "babel-polyfill": "6.23.0",
    "babel-preset-es2015-rollup": "3.0.0",
    "imageoptim-cli": "1.14.8",
    "node-sass": "3.13.0",
    "onchange": "3.0.2",
    "parallelshell": "2.0.0",
    "postcss-cli": "2.6.0",
    "rollup-plugin-babel": "2.7.1",
    "rollup-plugin-node-resolve": "2.0.0",
    "uglify-js2": "2.1.11"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "static.font": "rsync -azP --delete ./static/src/font/ ./static/dist/font/",
    "static.image": "rsync -azP --delete ./static/src/image/ ./static/dist/image/",
    "static.optim": "imageoptim --directory ./static/dist/image/",
    "static.build": "npm run static.font && npm run static.image && npm run static.optim",
    "static.watch": "onchange './static/src/font/*' './static/src/image/*' './static/src/video/*' -- npm run static.build",
    "style.autoprefixer": "postcss --use autoprefixer --replace ./static/dist/style/main.css",
    "style.sass": "node-sass --source-map true --output-style compressed ./static/src/style/main.scss ./static/dist/style/main.css",
    "style.build": "npm run style.sass && npm run style.autoprefixer",
    "style.watch": "onchange './static/src/style/**/*' -- npm run style.build",
    "script.rollup": "rollup --sourcemap --config ./static/src/script/rollup.config.js",
    "script.uglify": "uglifyjs2 ./static/dist/script/bundle.js --output ./static/dist/script/bundle.js --compress --mangle",
    "script.build": "npm run script.rollup && npm run script.uglify",
    "script.watch": "onchange './static/src/script/**/*' -- npm run script.build",
    "build": "npm run static.build & npm run style.build & npm run script.build",
    "watch": "npm run static.watch & npm run style.watch & npm run script.watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benforshey/gshaly.com.git"
  },
  "author": "",
  "license": "CC-BY-NC-ND-4.0",
  "bugs": {
    "url": "https://github.com/benforshey/gshaly.com/issues"
  },
  "homepage": "https://github.com/benforshey/gshaly.com#readme"
}
